<div class="container">
<div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'calendar' %>
  </div>
</div>
</div>


<div>
  <%= simple_form_for [ @classe, @event ] do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :start_time, as: :datetime, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_time, as: :datetime, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
</div>
