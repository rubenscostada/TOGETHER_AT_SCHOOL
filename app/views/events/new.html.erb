<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-6 calendar-view">
      <div class="header">
        <h1>Calendar</h1>
        <div class="dropdown-event">
          <button class="btn btn-primary dropdown-toggle" role="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Add an event
          </button>
          <br>
          <div class="dropdown-menu calendar" aria-labelledby="dropdownMenuButton">
            <div class="calendar-form">
                <%= simple_form_for [ @classe, @event ] do |f| %>
                <%= f.input :title %>
                <%= f.input :description %>
                <%= f.input :start_time, as: :datetime, html5: true %>
                <%= f.input :end_time, as: :datetime, html5: true %>
                <%= f.button :submit, class: 'btn btn-primary' %>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  <%= render partial: 'calendar' %>
  </div>
</div>
