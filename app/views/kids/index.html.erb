<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-2">
      <div class="kid_avatars">
      <h1>Select a child</h1>

      <% @kids.each do |kid|  %>
      <%= link_to new_kid_small_event_path(kid) do %>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
      <h2> <%= kid.first_name %> <%= kid.last_name %> </h2>
      <% end %>
      <% end %>
</div>
    </div>
  </div>
</div>
