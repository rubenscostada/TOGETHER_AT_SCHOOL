
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <h1>Diary</h1>
       <h2> <%= @kid.first_name %> <%= @kid.last_name %> <%=Date.today%> </h2>
        <div class="new_diary">
          <%= simple_form_for [@kid, @small_event], url: kid_small_events_path do |f| %>
          <%= f.input :date, as: :hidden %>
          <div class="nap-time"> <%= f.input :start_nap_time_morning, as: :time, html5: true, label: 'Morning Nap Started at'%>
          <%= f.input :end_nap_time_morning, as: :time, html5: true, label: 'Morning Nap Ended at' %> </div>
          <div class="teacher_input">
          <%= f.input :lunch_description, label: 'Lunch of the day' %></div>
          <div class="nap-time">
          <%= f.input :start_nap_time_afternoon, as: :time, html5: true, label: 'Afternoon Nap started at' %>
          <%= f.input :end_nap_time_afternoon, as: :time, html5: true, label: 'Afternoon Nap Ended at' %> </div>

          <div class="teacher_input"> <%= f.input :observation %> </div>

          <%= f.submit "Submit Diary", class: "btn btn-primary diary" %>
          <% end %>

      </div>
    </div>
  </div>
</div>

